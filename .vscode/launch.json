{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "iOS - Preview",
            "program": "${workspaceFolder}/bin/run",
            "args": [
                "force:lightning:lwc:preview",
                "-p",
                "iOS",
                "-n",
                "HelloWorld",
                "-t",
                "sfdxdebug"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Android - Preview",
            "program": "${workspaceFolder}/bin/run",
            "args": [
                "force:lightning:lwc:preview",
                "-p",
                "android",
                "-n",
                "HelloWorld",
                "-t",
                "emu2"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "iOS - Setup",
            "program": "${workspaceFolder}/bin/run",
            "args": [
                "force:lightning:local:setup",
                "-p",
                "iOS"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Android - Setup",
            "program": "${workspaceFolder}/bin/run",
            "args": [
                "force:lightning:local:setup",
                "-p",
                "android"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "iOS - Device List",
            "program": "${workspaceFolder}/bin/run",
            "args": [
                "force:lightning:local:device:list",
                "-p",
                "iOS"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Android - Device List",
            "program": "${workspaceFolder}/bin/run",
            "args": [
                "force:lightning:local:device:list",
                "-p",
                "android"
            ]
        },
        {
            "name": "ts-node",
            "type": "node",
            "request": "launch",
            "args": ["${relativeFile}"],
            "runtimeArgs": ["-r", "ts-node/register"],
            "cwd": "${workspaceRoot}",
            "protocol": "inspector",
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "type": "node",
            "name": "vscode-jest-tests",
            "request": "launch",
            "args": ["--runInBand"],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "disableOptimisticBPs": true,
            "program": "${workspaceFolder}/node_modules/jest/bin/jest"
        }
    ]
}
